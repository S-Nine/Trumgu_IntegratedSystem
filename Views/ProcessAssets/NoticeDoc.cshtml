@using Trumgu_IntegratedManageSystem.Utils
@{
    Layout = null;
}
<!DOCTYPE html>
<html >
<head>
	<meta charset="UTF-8">
	<title>公告文档</title>
	<link rel="stylesheet" type="text/css" href="~/css/layout.css">
	<link rel="stylesheet" type="text/css" href="~/lib/jquery-easyui-1-5-4-2/themes/default/easyui.css">
	<link rel="stylesheet" type="text/css" href="~/lib/jquery-easyui-1-5-4-2/themes/icon.css">
	<script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/jquery.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/jquery.easyui.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/locale/easyui-lang-zh_CN.js"></script>
	<script type="text/javascript" src="~/js/utils/tools.js"></script>
	<script type="text/javascript" src="~/js/utils/config.js"></script>
	<script type="text/javascript" src="~/js/utils/easyui-extend.js"></script>
</head>
<body style="height:100%;overflow:hidden;margin-top:0px;">
	<div class="content" style="padding: 78px 0 0;">
		<div class="operation_area" style="height:78px;">
			<div class="easyui-panel" style="padding:5px;height:38px;width:100%;">
				标题：<input id="txt_title_like" class="easyui-textbox" style="width:150px">
			</div>
			@Html.Partial("../Shared/_ButtonTools.cshtml")
		</div>
		<div class="datagrid_area" style="width:100%;">
			<table id="notice_datagrid" title="公告文档列表"></table> 
		</div>
	</div>
	<div id="dlg_add_notice" class="easyui-dialog" title="编辑公告文件" style="width:600px;height:500px;padding:5px;"   
        data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">  
		<input type="hidden" id="hid_id" value=""/>
		<div style="margin-top:5px;">
			<div style="margin-top:5px;">
				<span>公告标题：</span>
				<input id="txt_title" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
				<span>是否置顶：</span>
				<select id="cmb_is_settop" class="easyui-combobox" name="dept" style="width:200px;" data-options="editable:false">   
					<option value="0">否</option>   
					<option value="1">是</option>
				</select>&nbsp;&nbsp;<span style="color:red;">*</span>
			</div>
			<div style="margin-top:5px;">
				<span>公告备注：</span>
				<input id="txt_remarks" class="easyui-textbox" data-options="validType:['length[0,200]'],multiline:true" style="width:480px;height:80px;">
			</div>
			@Html.Partial("../Shared/_UploadFileControl.cshtml")
		</div>
	</div>
	<div id="dlg_notice_file" class="easyui-dialog" title="附件" style="width:600px;height:500px;padding:5px;"   
        data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">  
		<input type="hidden" id="hid_id" value=""/>
		<div style="margin-top:5px;height:442px;">
			<table id="file_datagrid" title="附件列表"></table>
		</div>
	</div>
	<script type="text/javascript" src="~/js/processAssets/noticedoc.js?t=@DateTime.Now.ToFileTimeUtc()"></script>
</body>
</html>