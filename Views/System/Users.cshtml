@{
    Layout = null;
}
<!DOCTYPE html>
<html >
<head>
	<meta charset="UTF-8">
	<title>川谷综合管理系统</title>
	<link rel="stylesheet" type="text/css" href="~/css/layout.css">
	<link rel="stylesheet" type="text/css" href="~/lib/jquery-easyui-1-5-4-2/themes/default/easyui.css">
	<link rel="stylesheet" type="text/css" href="~/lib/jquery-easyui-1-5-4-2/themes/icon.css">
	<script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/jquery.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/jquery.easyui.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/locale/easyui-lang-zh_CN.js"></script>
	<script type="text/javascript" src="~/js/utils/tools.js"></script>
	<script type="text/javascript" src="~/js/utils/config.js"></script>
	<script type="text/javascript" src="~/js/utils/easyui-extend.js"></script>
</head>
<body style="height:100%;overflow:hidden;">
	<div class="content" style="padding: 78px 0 0;">
		<div class="operation_area" style="height:78px;">
			<div class="easyui-panel" style="padding:5px;height:38px;width:100%;">
				用户名称：<input id="txt_name_like" class="easyui-textbox" style="width:150px">
			</div>
			@Html.Partial("../Shared/_ButtonTools.cshtml")
		</div>
		<div class="datagrid_area" style="width:100%;">
			<table id="user_datagrid" title="用户列表"></table> 
		</div>
	</div>
	<div id="dlg_add_user" class="easyui-dialog" title="编辑用户" style="width:310px;height:280px;padding:5px;"   
        data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">  
		<input type="hidden" id="hid_id" value=""/>
		<div style="margin-top:5px;">
			<span>用户名称：</span>
			<input id="txt_name" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
		</div>
		<div style="margin-top:5px;">
			<span>登录名称：</span>
			<input id="txt_login_name" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
		</div>
		<div style="margin-top:5px;">
			<span>登录密码：</span>
			<input id="txt_login_pwd" class="easyui-passwordbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
		</div>
		<div style="margin-top:5px;">
			<span>联系邮箱：</span>
			<input id="txt_email" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]','email']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
		</div>
		<div style="margin-top:5px;">
			<span>联系电话：</span>
			<input id="txt_tel" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
		</div>
		<div style="margin-top:5px;">
			<span>用户性别：</span>
			<select id="cmb_gender" class="easyui-combobox" name="dept" style="width:200px;" data-options="editable:false">   
				<option value="0">女</option>   
				<option value="1">男</option>
			</select>&nbsp;&nbsp;<span style="color:red;">*</span>
		</div>
		<div style="margin-top:5px;">
			<span>用户状态：</span>
			<select id="cmb_state" class="easyui-combobox" name="dept" style="width:200px;" data-options="editable:false">   
				<option value="1">启用</option>   
				<option value="0">禁用</option>
			</select>&nbsp;&nbsp;<span style="color:red;">*</span>
		</div>
	</div>
	<div id="dlg_add_delp" class="easyui-dialog" title="编辑部门" style="width:300px;height:350px;padding:5px;"   
        data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">  
		<input type="hidden" id="hid_user_id" value=""/>
		<ul id="tree_delp"></ul>  
	</div>
	<div id="dlg_add_role" class="easyui-dialog" title="编辑角色" style="width:300px;height:350px;padding:5px;"   
        data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">  
		<input type="hidden" id="hid_user_id2" value=""/>
		<ul id="tree_role"></ul>  
	</div>
	<script type="text/javascript" src="~/js/system/users.js?t=@DateTime.Now.ToFileTimeUtc()"></script>
</body>
</html>