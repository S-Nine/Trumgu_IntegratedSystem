@using Trumgu_IntegratedManageSystem.Utils
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>热点投票</title>
    <link rel="stylesheet" type="text/css" href="~/css/layout.css">
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-easyui-1-5-4-2/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-easyui-1-5-4-2/themes/icon.css">
    <script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/locale/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript" src="~/js/utils/tools.js"></script>
    <script type="text/javascript" src="~/js/utils/config.js"></script>
    <script type="text/javascript" src="~/js/utils/easyui-extend.js"></script>
    <script type="text/javascript" src="~/js/utils/moment-with-locales.js"></script>
</head>
<body style="height:100%;overflow:hidden;">
    <div class="content" style="padding: 78px 0 0;">
        <div class="operation_area" style="height:78px;">
            <div class="easyui-panel" style="padding:5px;height:38px;width:100%;">
                热点投票标题：<input id="txt_vote_like" class="easyui-textbox" style="width:150px">
            </div>
            @Html.Partial("../Shared/_ButtonTools.cshtml")
        </div>
        <div class="datagrid_area" style="width:60%;display:inline-block;">
            <table id="vote_datagrid" title="热点投票列表"></table>
        </div>
        <div class="datagrid_area" style="width:40%;float: right;display:inline-block;">
            <table id="option_datagrid" title="选项列表"></table> 
        </div>
    </div>
<div id="dlg_add_vote" class="easyui-dialog" title="编辑热点投票" style="width:500px;height:380px;padding:5px;"
     data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">
    <input type="hidden" id="hid_id" value="" />
    <div style="margin-top:5px;">
        <span>投票标题：</span>
        <input id="txt_title" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
    </div>
    <div style="margin-top:5px;">
        <span>投票内容：</span>
        <textarea id="txt_content" rows="10" cols="50"></textarea>
    </div>
    <div style="margin-top:5px;">
        <span>开始时间：</span>
        <input id="txt_strat" class="easyui-datebox" data-options="editable:false" style="width:200px">
    </div>
    <div style="margin-top:5px;">
        <span>结束时间：</span>
        <input id="txt_end" class="easyui-datebox" data-options="editable:false" style="width:200px">
    </div>
    <div style="margin-top:5px;">
        <span>选中类型：</span>
        多选：<input type="radio" name="checkType" value="0" checked="checked"/>
        单选：<input type="radio" name="checkType" value="1"/>
    </div>
    <div style="margin-top:5px;">
        <span>是否关闭：</span>
        启用：<input type="radio" name="isColse" value="0" checked="checked"/>
        关闭：<input type="radio" name="isColse" value="1" />
    </div>

</div>

<div id="dlg_add_option" class="easyui-dialog" title="编辑选项" style="width:300px;height:180px;padding:5px;"
     data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">
    <input type="hidden" id="hid_oid" value="" />
    <input type="hidden" id="hid_vote_id" value="" />
    <div style="margin-top:5px;">
        <span>选项：</span>
        <input id="txt_option_header" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
    </div>
    <div style="margin-top:5px;">
        <span>内容：</span>
        <input id="txt_option_title" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>

    </div>

</div>
<script type="text/javascript" src="~/js/pfxfund_organization/vote_manager.js?t=@DateTime.Now.ToFileTimeUtc()"></script>
</body>
</html>