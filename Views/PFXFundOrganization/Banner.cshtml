
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="multipart/form-data; charset=utf-8" />
    <title>Banner图列表</title>
    <link rel="stylesheet" type="text/css" href="~/css/layout.css">
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-easyui-1-5-4-2/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-easyui-1-5-4-2/themes/icon.css">
    <link href="~/js/utils/webuploader-0.1.5/webuploader.css" rel="stylesheet" />
    <link href="~/js/utils/webuploader-0.1.5/style.css" rel="stylesheet" />
    <script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-easyui-1-5-4-2/locale/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript" src="~/js/utils/tools.js"></script>
    <script type="text/javascript" src="~/js/utils/config.js"></script>
    <script type="text/javascript" src="~/js/utils/easyui-extend.js"></script>
    <script type="text/javascript" src="~/js/utils/moment-with-locales.js"></script>
    <script src="~/js/utils/webuploader-0.1.5/webuploader.js"></script>
    <script src="~/js/utils/webuploader-0.1.5/upload.js"></script>
</head>
<body style="height:100%;overflow:hidden;">
    <div class="content" style="padding: 78px 0 0;">
        <div class="operation_area" style="height:78px;">
            <div class="easyui-panel" style="padding:5px;height:38px;width:100%;">
            </div>
            @Html.Partial("../Shared/_ButtonTools.cshtml")
        </div>
        <div class="datagrid_area" style="width:100%;display:inline-block;">
            <table id="banner_datagrid" title="Banner列表"></table>
        </div>
    </div>
<div id="dlg_add_banner" class="easyui-dialog" title="编辑banner信息" style="width:320px;height:260px;padding:5px;"
     data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">
    <input type="hidden" id="hid_id" value="" />
    <div style="margin-top:5px;">
        <span>图片标题：</span>
        <input id="txt_banner_title" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,100]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
    </div>
    <div style="margin-top:5px;">
        <span>点击事件：</span>
        <select id="txt_banner_target" class="easyui-combobox" name="dept" style="width:200px;">
            
            <option value="0">无事件</option>
            <option value="1">程序内打开链接</option>
            <option value="2">新窗口打开链接</option>
        </select>
    </div>
    <div style="margin-top:5px;">
        <span>跳转链接：</span>
        <input id="txt_banner_link" class="easyui-textbox" style="width:200px">
    </div>
    <div style="margin-top:5px;">
        <span>轮播顺序：</span>
        <input id="txt_banner_sort" class="easyui-textbox easyui-validatebox" data-options="required:true,validType:['length[0,3]']" style="width:200px">&nbsp;&nbsp;<span style="color:red;">*</span>
    </div>
    <div style="margin-top:5px;">
        <span>是否有效：</span>
        有效：<input type="radio" name="checkType" value="1" checked="checked" />
        禁用：<input type="radio" name="checkType" value="0" />
    </div>

</div>

<div id="dlg_banner_file" class="easyui-dialog" title="上传轮播图" style="width:800px;height:550px;padding:5px;" data-options="iconCls:'icon-add',resizable:true,modal:true,closed:true">
    <div style="margin-top: 5px;">
        <form id="form1" enctype="multipart/form-data">
            @Html.Partial("BanneView")
        </form>
    </div>
</div>

<script type="text/javascript" src="~/js/pfxfund_organization/banner.js?t=@DateTime.Now.ToFileTimeUtc()"></script>
</body>
<body>
</body>
</html>
